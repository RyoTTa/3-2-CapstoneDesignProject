<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/page_header"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#E5EBEB"
            android:gravity="center"
            android:text="하위"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="-28dp" />


        <ImageView
            android:id="@+id/edit_item_button"
            android:layout_width="50dp"
            android:layout_height="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/page_header"
            app:layout_constraintEnd_toEndOf="@+id/page_header"
            app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintStart_toStartOf="@+id/page_header"
            app:layout_constraintTop_toTopOf="@+id/page_header"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/item_edit_icon" />

        <ImageView
            android:id="@+id/delete_item_button"
            android:layout_width="50dp"
            android:layout_height="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_item_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintStart_toEndOf="@+id/edit_item_button"
            app:layout_constraintTop_toTopOf="@+id/edit_item_button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/item_delete_icon" />

        <ImageView
            android:id="@+id/item_detail_item_image"
            android:layout_width="323dp"
            android:layout_height="291dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page_header"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/item_detail_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ItemName"
            android:textSize="9pt"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_image"
            app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/detail_start_date"
            android:layout_width="226dp"
            android:layout_height="19dp"
            android:text="Price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_name" />

        <TextView
            android:id="@+id/item_detail_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_start_date" />

        <TextView
            android:id="@+id/item_detail_item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ 하루"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toEndOf="@+id/item_detail_item_price"
            app:layout_constraintTop_toTopOf="@+id/item_detail_item_price" />

        <View
            android:id="@+id/divider1"
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"

            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_price" />

        <TextView
            android:id="@+id/item_detail_item_detail"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="상세 정보"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/resv_info_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_detail" />

        <TextView
            android:id="@+id/item_detail_item_location"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="location"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_detail" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resv_info_cate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.07" />

        <TextView
            android:id="@+id/item_detail_item_category"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="category"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_location"
            app:layout_constraintVertical_bias="0.049" />

        <View
            android:id="@+id/divider2"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"

            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_category" />

        <TextView
            android:id="@+id/item_detail_owner_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="공유자 정보"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <ImageView
            android:id="@+id/item_detail_owner_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sample_pro"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_detail_owner_detail"
            app:srcCompat="@android:color/transparent" />


        <TextView
            android:id="@+id/item_detail_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="Owner Name"
            app:layout_constraintStart_toEndOf="@+id/item_detail_owner_image"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_owner_detail" />


        <RatingBar
            android:id="@+id/owner_star"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            app:layout_constraintStart_toEndOf="@+id/item_detail_owner_image"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_owner_name" />

        <TextView
            android:id="@+id/owner_star_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_reviewnum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toEndOf="@+id/owner_star"
            app:layout_constraintTop_toTopOf="@+id/owner_star" />

        <ImageView
            android:id="@+id/btn_question"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/btn_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_reservation"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginTop="600dp"
            android:src="@drawable/btn_reservation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.415"
            app:layout_constraintStart_toEndOf="@+id/btn_question"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bucketheart"
            android:layout_width="32dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.883"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_item_image"
            app:layout_constraintVertical_bias="0.044"
            app:srcCompat="@drawable/heart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
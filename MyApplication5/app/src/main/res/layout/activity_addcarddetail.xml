<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#E5EBEB"
        android:gravity="center"
        android:text="카드 등록"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="카드번호"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
        android:id="@+id/cardnumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:hint="1234"
        android:nextFocusDown="@+id/cardnumber2"
            android:singleLine="true"
            android:maxLength="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            />
        <EditText
            android:id="@+id/cardnumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:hint="4567"
            android:nextFocusDown="@+id/cardnumber3"
            android:singleLine="true"
            android:maxLength="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            />
        <EditText
            android:id="@+id/cardnumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:nextFocusDown="@+id/cardnumber4"
            android:singleLine="true"
            android:hint="8901"
            android:maxLength="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="-"
            />
        <EditText
            android:id="@+id/cardnumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="2345"
            android:maxLength="4"/>

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_add"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="4dp"
            />

    </LinearLayout>

</LinearLayout>